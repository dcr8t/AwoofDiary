<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- SELECTED STATE: Glowing Indigo Background -->
    <item android:state_checked="true">
        <shape>
            <solid android:color="#818CF8" /> <!-- Indigo Accent -->
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- UNSELECTED STATE: Dark Surface with subtle outline -->
    <item>
        <shape>
            <solid android:color="#1E293B" /> <!-- Surface Color -->
            <stroke android:width="1dp" android:color="#334155" /> <!-- Dark Border -->
            <corners android:radius="24dp" />
        </shape>
    </item>
</selector>
